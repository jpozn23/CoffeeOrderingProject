<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeOrderingApp.Pages.CustomerShoppingCartPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="White">
                <Label Text="Shopping Cart" FontAttributes="Bold"
                       FontSize="30" HorizontalTextAlignment="Center"
                       TextColor="DarkSlateGray"/>
            </Frame>

            <ScrollView>
                <StackLayout>
                    <Frame HeightRequest="100" Margin="5">
                        <StackLayout>
                            <Label Text="Drink Name" x:Name="Drink1NameLabel" 
                                   FontSize="25" />
                            <Label Text="Drink Add Ons Subs" 
                                   FontSize="25" x:Name="Drink1AddSubsLabel" />
                            <Label Text="$0.00" x:Name="Drink1TotalLabel"
                                   FontSize="25" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Frame>
                    <Frame HeightRequest="100" Margin="5">
                        <StackLayout>
                            <Label Text="Drink Name" x:Name="Drink2NameLabel" 
                                   FontSize="25" />
                            <Label Text="Drink Add Ons Subs" 
                                   FontSize="25" x:Name="Drink2AddSubsLabel" />
                            <Label Text="$0.00" x:Name="Drink2TotalLabel"
                                   FontSize="25" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Frame>
                    <Frame HeightRequest="100" Margin="5">
                        <StackLayout>
                            <Label Text="Drink Name" x:Name="Drink3NameLabel" 
                                   FontSize="25" />
                            <Label Text="Drink Add Ons Subs" 
                                   FontSize="25" x:Name="Drink3AddSubsLabel" />
                            <Label Text="$0.00" x:Name="Drink3TotalLabel"
                                   FontSize="25" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Frame>
                    <Frame HeightRequest="100" Margin="5">
                        <StackLayout>
                            <Label Text="Drink Name" x:Name="Drink4NameLabel" 
                                   FontSize="25" />
                            <Label Text="Drink Add Ons Subs" 
                                   FontSize="25" x:Name="Drink4AddSubsLabel" />
                            <Label Text="$0.00" x:Name="Drink4TotalLabel"
                                   FontSize="25" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Frame>
                    <Frame HeightRequest="100" Margin="5">
                        <StackLayout>
                            <Label Text="Drink Name" x:Name="Drink5NameLabel" 
                                   FontSize="25" />
                            <Label Text="Drink Add Ons Subs" 
                                   FontSize="25" x:Name="Drink5AddSubsLabel" />
                            <Label Text="$0.00" x:Name="Drink5TotalLabel"
                                   FontSize="25" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>

            <Frame Margin="5,2,5,2" HeightRequest="20">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Total - $" FontSize="25"
                               FontAttributes="Bold" 
                               Margin="100,-6,0,0"/>
                        <Label x:Name="TotalOrderPriceLabel" FontSize="25"
                               FontAttributes="Bold" Text="0.00"
                               Margin="0,-6,0,0"/>
                    </StackLayout>
                </StackLayout>

               

            </Frame>
            <Button x:Name="Checkout" Clicked="Checkout_Clicked"
                    Text="Checkout" BackgroundColor="#33b249"
                    FontAttributes="Bold" TextColor="White"
                    FontSize="15" Margin="5,2,5,5"
                    HeightRequest="55"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>